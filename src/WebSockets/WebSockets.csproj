<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>GraphQL.Server.Transports.WebSockets</AssemblyName>
    <RootNamespace>GraphQL.Server.Transports.WebSockets</RootNamespace>
    <VersionPrefix>0.0.0</VersionPrefix>
    <VersionSuffix>dev</VersionSuffix>
    <Product>GraphQL for .NET</Product>
    <Company />
    <Authors>Pekka Heikura</Authors>
    <Description>WebSockets transport for subscriptions</Description>
    <PackageProjectUrl>https://github.com/graphql-dotnet/subscriptions-transport-ws</PackageProjectUrl>
    <RepositoryUrl>https://github.com/graphql-dotnet/subscriptions-transport-ws</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>GraphQL WebSockets subscriptions transport</PackageTags>
  </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="GraphQL" Version="2.0.0-alpha-800" />
        <PackageReference Include="Microsoft.AspNetCore.WebSockets" Version="2.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="2.0.0" />
        <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
        <PackageReference Include="System.Reactive" Version="3.1.1" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\AspNetCore\AspNetCore.csproj" />
    </ItemGroup>
</Project>
