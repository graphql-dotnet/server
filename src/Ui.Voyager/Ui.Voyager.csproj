<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>GraphQL.Server.Ui.Voyager</AssemblyName>
    <RootNamespace>GraphQL.Server.Ui.Voyager</RootNamespace>
    <Product>GraphQL for .NET</Product>
    <Company>graphql-dotnet</Company>
    <Authors>Pekka Heikura</Authors>
    <Description>GraphQL voyager extension</Description>
    <PackageProjectUrl>https://github.com/graphql-dotnet/server</PackageProjectUrl>
    <RepositoryUrl>https://github.com/graphql-dotnet/server</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>GraphQL Voyager</PackageTags>
    <Copyright>Pekka Heikura</Copyright>
    <PackageId>GraphQL.Server.Ui.Voyager</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Internal\voyager.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.0.2" />
  </ItemGroup>

</Project>
