<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>GraphQL.Server.Ui.Playground</AssemblyName>
    <RootNamespace>GraphQL.Server.Ui.Playground</RootNamespace>
    <Product>GraphQL for .NET</Product>
    <Company />
    <Authors>Pekka Heikura</Authors>
    <Description>GraphQL playground extension</Description>
    <PackageProjectUrl>https://github.com/graphql-dotnet/server</PackageProjectUrl>
    <RepositoryUrl>https://github.com/graphql-dotnet/server</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>GraphQL Playground</PackageTags>
    <Copyright>Pekka Heikura</Copyright>
    <PackageId>GraphQL.Server.Ui.Playground</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <EmbeddedResource Include="Html\index.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.0.0" />
  </ItemGroup>

</Project>
